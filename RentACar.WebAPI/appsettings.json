                                "DataLength": 4000,
                                "AllowNull": true
                            },
                            {
                                "ColumnName": "ResponseBody",
                                "DataType": "nvarchar",
                                "DataLength": 4000,
                                "AllowNull": true
                            },
                            {
                                "ColumnName": "IpAddress",
                                "DataType": "nvarchar",
                                "DataLength": 100,
                                "AllowNull": true
                            },
                            {
                                "ColumnName": "UserAgent",
                                "DataType": "nvarchar",
                                "DataLength": 400,
                                "AllowNull": true
                            },
                            {
                                "ColumnName": "ResponseTimeMs",
                                "DataType": "int",
                                "AllowNull": true
                            },
                            {
                                "ColumnName": "UserId",
                                "DataType": "uniqueidentifier",
                                "AllowNull": true
                            },
                            {
                                "ColumnName": "TraceId",
                                "DataType": "nvarchar",
                                "DataLength": 100,
                                "AllowNull": true
                            }
                        ]
                    }
                }
            }
        ],
        "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
        "Properties": {
            "Application": "RentACarProject"
        }
    },
